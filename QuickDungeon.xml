<Include src="style.xml"/>

<!--Body-->

<Panel class="panelFront">
  <Button class="closeButton">X</Button>
  <TableLayout>
    <Row preferredHeight="175">
      <Text class="version">0.1.6</Text>
      <Cell columnSpan="2">
        <Text class="title">QuickDungeon</Text>
      </Cell>
    </Row>
    <Row>
      <Cell columnSpan="2">
          <VerticalLayout padding="25 25 0 25">
            <Text>Use the draw tool to draw a dungeon map on the table</Text>
            <Text>Place this tile over the drawing and press Create</Text>
            <Text>To delete walls, place this tile on them and press Delete</Text>
            <Text>For options, flip this tile</Text>
          </VerticalLayout>
      </Cell>
    </Row>
    <Row preferredHeight="175">
      <Cell>
        <Button class="buttonCreateWalls">Create</Button>
      </Cell>
      <Cell>
        <Button class="buttonDeleteWalls">Delete</Button>
      </Cell>
    </Row>
  </TableLayout>
</Panel>

<Panel class="panelBack">
  <Button class="closeButton">X</Button>
  <TableLayout>
    <Row preferredHeight="175">
      <Text class="version">0.1.6</Text>
      <Cell columnSpan="2">
        <Text class="title">QuickDungeon</Text>
      </Cell>
    </Row>
    <Row preferredHeight="100">
      <Cell>
        <Toggle class="toggleColorMode">Texture Mode</Toggle>
      </Cell>
      <Cell>
        <Toggle id="collision" interactable="false">Collision / fog of war</Toggle>
      </Cell>
    </Row>
    <Row preferredHeight="150">
      <Cell columnSpan="2">
          <Text>In texture mode, draw color decides wall type</Text>
      </Cell>
    </Row>
    <Row class="colorList">
      <Cell columnSpan="2">
        <HorizontalLayout>
        <VerticalLayout>
          <Panel color="white"><Text>Castle</Text></Panel>
          <Panel color="grey"><Text>Cave</Text></Panel>
          <Panel color="purple"><Text>Door</Text></Panel>
        </VerticalLayout>
        <VerticalLayout>
          <Panel color="brown"><Text>Dirt</Text></Panel>
          <Panel color="orange"><Text>Wood</Text></Panel>
          <Panel color="black"><Text color="textMedium">Erase</Text></Panel>
        </VerticalLayout>
        <VerticalLayout>
          <Panel color="yellow"><Text>House</Text></Panel>
          <Panel color="green"><Text>Bush</Text></Panel>
          <Panel />
        </VerticalLayout>
      </HorizontalLayout>
      </Cell>
    </Row>
    <Row preferredHeight="100">
        <Cell>
          <Toggle class="toggleSnapWalls">Walls snap to walls</Toggle>
        </Cell>
        <Cell>
          <Toggle class="toggleSnapGrid">Walls snap to grid</Toggle>
        </Cell>
    </Row>
    <Row preferredHeight="100">
        <Cell>
          <Toggle id="affectGlobal">Affect all lines/walls</Toggle>
        </Cell>
        <Cell>
        </Cell>
    </Row>
    <Row preferredHeight="200">
      <Cell>
        <Button class="buttonCreateWalls">Create</Button>
      </Cell>
      <Cell>
        <Button class="buttonDeleteWalls">Delete</Button>
      </Cell>
    </Row>
  </TableLayout>
</Panel>
